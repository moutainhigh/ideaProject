package hry.business.qcc.controller;

import hry.bean.JsonResult;
import hry.bean.PageResult;
import hry.business.qcc.model.QccEnterpriseEmployee;
import hry.business.qcc.service.QccEnterpriseEmployeeService;
import hry.core.mvc.controller.BaseController;
import hry.core.util.QueryFilter;
import hry.security.logger.ControllerLogger;
import io.swagger.annotations.*;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import javax.servlet.http.HttpServletRequest;

/**
 * <p> QccEnterpriseEmployeeController </p>
 *
 * @author: yaoz
 * @Date: 2020-05-21 13:57:47 
 */
@Api(value = "企查查", tags = "企查查", description = "企查查")
@RestController
@RequestMapping("/qcc/qccenterpriseemployee")
public class QccEnterpriseEmployeeController extends BaseController {

	@Autowired
	private QccEnterpriseEmployeeService qccEnterpriseEmployeeService;

	/**
     * <p> 企查查-id查询 </p>
     *
     * @author: yaoz
     * @Date: 2020-05-21 13:57:47 
     */
    @ApiOperation(value = "企查查-id查询", notes = "企查查-id查询")
    @ApiImplicitParams({
            @ApiImplicitParam(name = "token", value = "token令牌", required = true, paramType = "header"),
    })
    @ControllerLogger
    @GetMapping(value = "/get/{id}")
    public JsonResult get (@ApiParam(name = "id", value = "id", required = true) @PathVariable Long id) {
        JsonResult jsonResult = new JsonResult();
		QccEnterpriseEmployee qccEnterpriseEmployee = qccEnterpriseEmployeeService.get(id);
        if (qccEnterpriseEmployee != null) {
            jsonResult.setObj(qccEnterpriseEmployee);
            return jsonResult.setSuccess(true);
        }
        return jsonResult.setSuccess(false);
    }

	/**
     * <p> 企查查-添加 </p>
     *
     * @author: yaoz
     * @Date: 2020-05-21 13:57:47 
     */
    @ApiOperation(value = "企查查-添加", notes = "企查查-添加")
    @ApiImplicitParams({
            @ApiImplicitParam(name = "token", value = "token令牌", required = true, paramType = "header"),
    })
    @ControllerLogger
    @PostMapping(value = "/add")
    public JsonResult add (QccEnterpriseEmployee qccEnterpriseEmployee) {
        JsonResult jsonResult = new JsonResult();
        qccEnterpriseEmployeeService.save(qccEnterpriseEmployee);
        return jsonResult.setSuccess(true);
    }

    /**
     * <p> 企查查-修改 </p>
     *
     * @author: yaoz
     * @Date: 2020-05-21 13:57:47 
     */
    @ApiOperation(value = "企查查-修改", notes = "企查查-修改")
    @ApiImplicitParams({
            @ApiImplicitParam(name = "token", value = "token令牌", required = true, paramType = "header"),
    })
    @ControllerLogger
    @PostMapping(value = "/modify")
    public JsonResult modify (QccEnterpriseEmployee qccEnterpriseEmployee) {
        JsonResult jsonResult = new JsonResult();
        qccEnterpriseEmployeeService.update(qccEnterpriseEmployee);
        return jsonResult.setSuccess(true);
    }

    /**
     * <p> 企查查-id删除 </p>
     *
     * @author: yaoz
     * @Date: 2020-05-21 13:57:47 
     */
    @ApiOperation(value = "企查查-id删除", notes = "企查查-id删除")
    @ApiImplicitParams({
            @ApiImplicitParam(name = "token", value = "token令牌", required = true, paramType = "header"),
    })
    @ControllerLogger
    @PostMapping(value = "/remove/{id}")
    public JsonResult remove (@ApiParam(name = "id", value = "id", required = true) @PathVariable Long id) {
        JsonResult jsonResult = new JsonResult();
        qccEnterpriseEmployeeService.delete(id);
        return jsonResult.setSuccess(true);
    }

    /**
     * <p> 企查查-分页查询 </p>
     *
     * @author: yaoz
     * @Date: 2020-05-21 13:57:47 
     */
    @ApiOperation(value = "企查查-分页查询", notes = "企查查-分页查询")
    @ApiImplicitParams({
            @ApiImplicitParam(name = "token", value = "token令牌", required = true, paramType = "header"),
    })
    @ControllerLogger
    @PostMapping(value = "/list")
    public PageResult list (
            @ApiParam(name = "page", value = "当前页码", required = true) @RequestParam String page,
            @ApiParam(name = "pageSize", value = "每页条数", required = true) @RequestParam String pageSize,
            HttpServletRequest request) {
        QueryFilter filter = new QueryFilter(QccEnterpriseEmployee.class, request);
        return qccEnterpriseEmployeeService.findPageResult(filter);
    }

}
